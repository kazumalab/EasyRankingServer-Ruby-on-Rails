= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :activate_digest
    = f.text_field :activate_digest
  .field
    = f.label :activated
    = f.check_box :activated
  .field
    = f.label :activated_at
    = f.datetime_select :activated_at
  .actions
    = f.submit 'Save'
